<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayoutRecycler2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:textAlignment="center">

        <Button
            android:id="@+id/recBotonOjito2"
            android:layout_width="61dp"
            android:layout_height="63dp"
            android:backgroundTint="#FFFFFF"
            app:icon="@drawable/visibility_fill0_wght400_grad0_opsz24"
            app:iconGravity="textStart"
            app:iconPadding="-5dp"
            app:iconSize="40dp"
            app:iconTint="#54CCC5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/recTextSitioRecycler2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Área TELECOM"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recTextUbicacionRecycler2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:text="Lima"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>