<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    android:id="@+id/drawer_layout"


    tools:context=".admin_nuevoSitioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/navbar"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/ACSboton_guardar"
                android:layout_width="134dp"
                android:layout_height="42dp"
                android:layout_marginStart="40dp"
                android:backgroundTint="#54CCC5"
                android:text="Guardar"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                app:cornerRadius="5dp"
                app:icon="@drawable/baseline_upload_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.418"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.94" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ACScardView"
                android:layout_width="201dp"
                android:layout_height="46dp"
                android:layout_marginBottom="592dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ACSinclude"
                app:layout_constraintVertical_bias="0.157">

                <TextView
                    android:id="@+id/ACStextView"
                    android:layout_width="211dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Nuevo Sitio"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="345dp"
                android:layout_height="479dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.449">

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/ACSnombre"
                        android:layout_width="125dp"
                        android:layout_height="47dp"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Nombre:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutSitio_Nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Nombre"
                        android:inputType="text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nombre_nuevoSitio"
                            android:layout_width="211dp"
                            android:layout_height="40dp"
                            android:ems="10"
                            android:inputType="text"
                            tools:ignore="LabelFor" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/ACScodigo"
                        android:layout_width="125dp"
                        android:layout_height="47dp"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="CÃ³digo:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutSitio_Codigo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Codigo"
                        android:inputType="text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        tools:ignore="MissingConstraints">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/codig_nuevoSitio"
                            android:layout_width="211dp"
                            android:layout_height="40dp"
                            android:ems="10"
                            android:inputType="text"
                            tools:ignore="LabelFor" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center">


                    <TextView
                        android:id="@+id/ACSdepartamento"
                        android:layout_width="125dp"
                        android:layout_height="47dp"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Departamento:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />


                    <Spinner
                        android:id="@+id/ACSspinner2"
                        android:layout_width="211dp"
                        android:layout_height="45dp"
                        android:layout_weight="2"
                        android:entries="@array/dep_array"
                        android:paddingTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/ACSprovincia"
                        android:layout_width="125dp"
                        android:layout_height="47dp"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Provincia:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/ACSspinner3"
                        android:layout_width="211dp"
                        android:layout_height="45dp"
                        android:layout_weight="2"
                        android:entries="@array/prov_array"
                        android:paddingTop="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/ACSdistrito"
                        android:layout_width="125dp"
                        android:layout_height="47dp"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Distrito:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/ACSspinner4"
                        android:layout_width="211dp"
                        android:layout_height="45dp"
                        android:layout_weight="2"
                        android:entries="@array/dis_array"
                        android:paddingTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/ACSubigeo"
                        android:layout_width="125dp"
                        android:layout_height="47dp"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Ubigeo:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/ACSspinner5"
                        android:layout_width="211dp"
                        android:layout_height="45dp"
                        android:layout_weight="2"
                        android:entries="@array/dis_array"
                        android:paddingTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/ACSlatitud"
                        android:layout_width="125dp"
                        android:layout_height="47dp"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Latitud:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutSitio_Latitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Latitud"
                        android:inputType="text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/latitud_nuevoSitio"
                            android:layout_width="211dp"
                            android:layout_height="40dp"
                            android:ems="10"
                            android:inputType="text"
                            tools:ignore="LabelFor" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/ACSlongitud"
                        android:layout_width="125dp"
                        android:layout_height="47dp"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Longitud:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutSitio_Longitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Longitud"
                        android:inputType="text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nlongitud_nuevoSitio"
                            android:layout_width="211dp"
                            android:layout_height="40dp"
                            android:ems="10"
                            android:inputType="text"
                            tools:ignore="LabelFor" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/ACStipoZona"
                        android:layout_width="125dp"
                        android:layout_height="47dp"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Tipo de zona:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/ACSspinnerzona"
                        android:layout_width="211dp"
                        android:layout_height="45dp"
                        android:layout_weight="2"
                        android:entries="@array/dis_array"
                        android:paddingTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/ACStipoSitio"
                        android:layout_width="125dp"
                        android:layout_height="47dp"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Tipo de sitio:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/ACSspinnersitio"
                        android:layout_width="211dp"
                        android:layout_height="45dp"
                        android:layout_weight="2"
                        android:entries="@array/dis_array"
                        android:paddingTop="4dp" />

                </LinearLayout>


            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity = "start">

        <include
            layout="@layout/admin_nav_drawer"
            />

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>