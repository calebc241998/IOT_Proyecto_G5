<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--android:padding="8dp"-->

    <androidx.cardview.widget.CardView
        android:id="@+id/recCard_item_listsuper_equipos"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:backgroundTint="@color/celeste_barra_lateral"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_border"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:textAlignment="center">

            <LinearLayout
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/recNombreEquipoSupervisor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="Archer C15"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recCantidadReportesSupervisor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="#Router"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/recImagenStatusReporteSupervisor"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="12dp"
                        android:src="@drawable/baseline_check_circle_outline_24" />

                    <TextView
                        android:id="@+id/recStringStatusSupervisor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingTop="7dp"
                        android:text="Sin reportes"
                        android:textColor="#5FCD2B"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recFotoEquipoSupervisor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/router"
                app:shapeAppearanceOverlay="@style/ShapeAppearance" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>
