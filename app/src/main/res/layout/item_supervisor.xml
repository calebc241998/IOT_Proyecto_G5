<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="101dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView_profile"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/visibility_fill0_wght400_grad0_opsz24" />

        <LinearLayout
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Pedro Piedra"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_site_number1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="# Sitios Asignados"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="241dp"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_active_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="12dp"
                    android:src="@drawable/baseline_check_circle_outline_24" />

                <TextView
                    android:id="@+id/textView_site_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:text="Activo"
                    android:textColor="#5FCD2B"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/avatar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
