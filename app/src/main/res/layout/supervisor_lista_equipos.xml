<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="#000000"
        android:drawableLeft="@drawable/baseline_library_add_24"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="Nuevo equipo"
        android:textColor="#FFFFFF"
        app:cornerRadius="10dp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="240dp"
        android:layout_height="59dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="Ãrea TELECOM"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:ignore="DuplicateIds,MissingConstraints"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="89dp" />

    <include
        android:id="@+id/include"
        layout="@layout/navbar"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="226dp"
        android:layout_height="65dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="148dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="185dp"
            android:layout_height="39dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="16dp">

            <TextView
                android:id="@+id/textViewListaEquipos"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Lista de equipos"
                android:textColor="@android:color/black"
                android:textSize="22dp"
                android:textStyle="bold"
                tools:ignore="DuplicateIds" />

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="268dp">

        <SearchView
            android:layout_width="310dp"
            android:layout_height="40dp" >

        </SearchView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:backgroundTint="#E8BA19"
        app:cardCornerRadius="20dp"
        tools:layout_editor_absoluteX="339dp"
        tools:layout_editor_absoluteY="268dp">

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/codigo_qr" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>