<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/background"

    tools:context=".Controladores.Admin.admin_info_sitio">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/include2"
                layout="@layout/admin_toolbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/editar_eliminar_sitios"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:backgroundTint="#000000"
                android:gravity="center|fill_horizontal|fill_vertical"
                android:textColor="#FFFFFF"
                app:cornerRadius="5dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.754"
                app:layout_constraintVertical_bias="0.7"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nombre_sitio_info_admin" />

            <Button
                android:id="@+id/editar_editar_sitios"
                android:layout_width="63dp"
                android:layout_height="40dp"
                android:backgroundTint="#54CBC4"
                android:gravity="center|fill_vertical"
                android:textColor="#FFFFFF"
                app:cornerRadius="5dp"
                app:icon="@drawable/baseline_edit_24"
                app:iconTint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.304"
                app:layout_constraintVertical_bias="0.7"

                app:layout_constraintStart_toEndOf="@+id/editar_eliminar_sitios"
                app:layout_constraintTop_toBottomOf="@+id/nombre_sitio_info_admin" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView_info_sitio"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                />

            <TextView
                android:id="@+id/nombre_sitio_info_admin"
                android:layout_width="179dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Área Telecom"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include2" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="349dp"
                android:layout_height="286dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                app:layout_constraintVertical_bias="0.068">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="28dp"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/nombre_campo_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Código:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nombre_campo_apellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Departamento:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/provincia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Provincia:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/distrito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Distrito:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ubigeo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="ubigeo:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/latitud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Latitud"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/longitu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Longitud"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tipo_zona"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Tipo de zona:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tipo_sitio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Tipo de sitio:"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/codigo_sitio_info_admin"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:text="1234567890"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/depar_sitio_info_admin"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:text="Lima"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/prov_sitio_info_admin"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:text="Lima"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/dist_sitio_info_admin"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:text="La Victoria"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/ubig_sitio_info_admin"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:text="435728"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/lat_sitio_info_admin"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:text="-12345678, "
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/long_sitio_info_admin"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:text="-12345678"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tipo_zona_sitio_info_admin"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:text="Urbana"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tipo_sitio_info_admin"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:text="Movil"
                        android:textColor="#000000"
                        android:textSize="17sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/numSuper_info_admin"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="0"
                    android:paddingTop="10dp"
                    android:text="Movil"
                    android:textColor="#000000"
                    android:textSize="17sp" />


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="221dp"
                android:layout_height="31dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toStartOf="@+id/editar_eliminar_sitios"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nombre_sitio_info_admin"
                app:layout_constraintVertical_bias="0.7">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/search_bkg"
                    android:gravity="center"
                    android:text="Información de Área"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"

                    />
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity = "start">

        <include
            layout="@layout/admin_nav_drawer"
            />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
