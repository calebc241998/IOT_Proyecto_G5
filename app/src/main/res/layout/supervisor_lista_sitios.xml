<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controladores.Supervisor.supervisor_lista_sitios">

    <!-- TODO: Update blank fragment layout -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOficial"
        android:layout_width="match_parent"
        android:layout_height="526dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BuscarSitios" />

    <TextView
        android:id="@+id/textViewTITULO"
        android:layout_width="240dp"
        android:layout_height="59dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="San Miguel"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="185dp"
        android:layout_height="39dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTITULO"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textViewListaSitios"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Lista de sitios"
            android:textColor="@android:color/black"
            android:textSize="22dp"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />

    </androidx.cardview.widget.CardView>

    <SearchView
        android:id="@+id/BuscarSitios"
        android:layout_width="345dp"
        android:layout_height="46dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/search_bkg"
        android:closeIcon="@drawable/close_fill0_wght400_grad0_opsz24"
        android:focusable="false"
        android:iconifiedByDefault="false"
        android:queryHint="Buscar por Nombre..."
        android:searchIcon="@drawable/search_fill0_wght400_grad0_opsz24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />


</androidx.constraintlayout.widget.ConstraintLayout>