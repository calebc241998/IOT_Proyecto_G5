<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--android:padding="8dp"-->

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:id="@+id/recCard_item_listlogs_superadmin"
        app:cardElevation="5dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        android:backgroundTint="@color/celeste_barra_lateral">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="2dp"
            android:textAlignment="center"
            android:background="@drawable/card_border"
            >

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/textView_descripcion_cardRC_superadmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="El administrador Pedro Piedra ha creado al supervisor Gianmarco Peralta"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_timestamp_cardRC_superadmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="2024-07-08 14:35:20"
                    android:textSize="14sp"
                    android:textStyle="italic" />


            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>



</LinearLayout>